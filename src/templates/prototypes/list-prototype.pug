extends ../../layouts/layout.pug
block content
    //- Page Title
    h1 Parties and groups
    .block
        .link__tab
            .link__tab--item.active
                p Commons
            .link__tab--item
                +link('#', "Lords")
    //- Option Tags
    ol.list
        each object in [{name: 'Conservative', description: 'All current Conservative MPs', count: '345'},{name: 'Labour', description: 'All current Labour MPs', count: '9'},{name: 'Vanguard Unionist Progressive Party', description: 'All current Vanguard Unionist Progressive Party MPs', count: '786'}]
            li.list__item
                +link('#')(title=object.name)
                    .column__float--left-80
                        h2= object.name
                        p= object.description
                    .column__float--right-20
                        p
                            =object.count
                            span MPs
