extends ../../layouts/layout.pug
block content
  //- Back Button
  .block
    p &lt; #[+link('house-commons-members-current.html', 'MPs and Lords')]
  //- Name & Affliation
  h1 Diane Abbott
  .block
    .block--border
      p.lead MP for #[+link('#', 'Hackney North and Stoke Newington')(class='lead')]
    .block--border
      p.lead Labour
      .line-break-heavy
      p #[+link('#', 'View all current Labour MPs')]
  h2 Contact Diane Abbott
  //- Representative Information
  .block
    .highlight__box
      p Your MP is your representative in Parliament and can help with issues that are the responsiblity of UK Parliament.
      p #[+link('contact.html', 'Find out who to contact with your issue')]
    .highlight__box--caution
      p Please include your postcode when emailing an MP.
    //- Contact Details
    dl.list__definition
      dt Email:
      dd #[+link('mailto:ayo.sanusi@parliament.uk', 'ayo.sanusi@parliament.uk')]
      dt Phone:
      dd #[+link('tel:02072194426', '020 7219 4426')]
      dt Address:
      dd House of Commons, London, SW1A 0AA
  //- Membership History
  h2 Membership History
  ol.list
    each object in [{constituency: 'Hackney North and Stoke Newington', sitting_duration: '2015 - Current', party: "Labour"},{constituency: 'Hackney North and Stoke Newington', sitting_duration: '1987 - 2015', party: 'Labour'}]
      li.list__item
        ul
          li MP for #[+link('#', object.constituency)]
          li=object.sitting_duration
          li #[+link('#', object.party)]
