extends ../../layouts/layout.pug
block content
  #content.section--primary
    .container
      .section--primary__container
        .section--primary__block
          h1 Search
          //-form(action='search')
          .form-group
            +input('Enter a keyword', 'search_box', 'search', 1000, '^(?!.*<script|<Script).*$', 'Inserting <script> as a search term is not permitted')
            |
            button#btn_loading(type='submit', value='Search', class='btn--secondary')
              span.btn--loading__text Search
              span.btn--loading__icon
                include ../../icons/loading.svg

  .section--primary
    .container
      .section--primary__container
        .section--primary__block
          h1 Find your MP and constituency

          form(action='postcode')
            .form-group
              +input('Search by postcode, for example; SW1A 0AA', 'postcode_main', 'text', 8, '[0-9a-zA-Z ]{5,}', '- Special characters (!@£$%) are not permitted')
              |
              button(type='submit', value='Search', class='btn--secondary') Find

          p Don't know your postcode? Find it on the  #[+link('http://www.royalmail.com/find-a-postcode', 'Royal Mail postcode finder')].

          h2 Check if this is your constituency

          form(action='postcode')
            .form-group
              +input('Search by postcode, for example; SW1A 0AA', 'postcode_partial', 'text', 8, '[0-9a-zA-Z ]{5,}', '- Special characters (!@£$%) are not permitted')
              |
              button(type='submit', value='Search', class='btn--secondary') Check

          p Don't know your postcode? Find it on the  #[+link('http://www.royalmail.com/find-a-postcode', 'Royal Mail postcode finder')].
