extends ../../layouts/layout.pug
block content
	-var thingPage = true

	+section--primary
		h1 Lists

	+section--secondary
		h2 Inline box list
		ol.list--inline__box
			// Name, Count
			+list--box__inline('Conservative', '345')
			+list--box__inline('Labour', '9')
			+list--box__inline('Vanguard Unionist Progressive Party ', '786')
			+list--box__inline('Labour', '9')
			+list--box__inline('Conservative', '345')
			+list--box__inline('Vanguard Unionist Progressive Party ', '786')

	+section--other
		h2 Box list
		h3 Default
		ol.list--box
			// Name, Constituency, Party, Image
			+list--box('Nigel Adams', 'Selby & Ainsty', 'Labour')
			+list--box('Nigel Adams', 'Selby & Ainsty', 'Labour', 'https://apidataparliament.azure-api.net/photo/0qLRSwb3.jpeg?crop=CU_1:1&width=186&quality=80', 'Margot James')
			-var lords_list = true
			+list--box('Lord Aberdare', 'House of Lords', 'Crossbench', '/images/placeholder_members_image.png')

		h3 Parties
		ol.list--box
			// Party, Count
			+list--box__parties('Labour', '365')

		h3 Accessible
		ol.list--box
			// Constituency, Date
			+list--box__accessible('', '2017 to present')
			+list--box__accessible('Selby & Ainsty', '6 May 2010 to 30 Mar 2015')

		h3 Generic
		ol.list--box
			-var list_box_h3 = true
			// Heading, Content
			+list--box__generic('Parties and groups', 'Find MPs and Lords by their party or group.')
				// Extendable
					p Further content can be added

	+section--other
		h2 Pipe list
		include ../../components/lists/list--pipe
