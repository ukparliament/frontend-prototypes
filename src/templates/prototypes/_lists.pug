extends ../../layouts/layout.pug
block content
  -var thingPage = true

  .section--primary(tabindex=0)#content
    .container
      h1
        span Lists

  section
    .container
      h2 Inline box list
      ol.list--block.list--inline
        // Name, Count
        +list--block__inline('Conservative', '345')
        +list--block__inline('Labour', '9')
        +list--block__inline('Conservative', '345')
        +list--block__inline('Labour', '9')
        +list--block__inline('Conservative', '345')
        +list--block__inline('Labour', '9')

  section
    .container
      h2 Inline box list (2 column layout)
      ol.list--block.list--2
        // Name, Count
        +list--block__inline('Conservative', '345')
        +list--block__inline('Labour', '9')
        +list--block__inline('Conservative', '345')
        +list--block__inline('Labour', '9')
        +list--block__inline('Conservative', '345')
        +list--block__inline('Labour', '9')

  section.section--wide
    .container
      h2 Inline box list (3 column layout &amp; Inline Text)
      ol.list--block.list--3
        // Name, Count
        +list--block__inline('Conservative', '345', true)
        +list--block__inline('Labour', '9', true)
        +list--block__inline('Conservative', '345', true)
        +list--block__inline('Labour', '9', true)
        +list--block__inline('Conservative', '345', true)
        //- +list--block__inline('Labour', '9', true)

  section
    .container
      h2 Inline box list (3 column layout, becomes 2 columns if within the default section)
      ol.list--block.list--3
        // Name, Count
        +list--block__inline('Conservative', '345', true)
        +list--block__inline('Labour', '9', true)
        +list--block__inline('Conservative', '345', true)
        +list--block__inline('Labour', '9', true)
        +list--block__inline('Conservative', '345', true)
        //- +list--block__inline('Labour', '9', true)

  section
    .container
      h2 Box list
      h3 Default
      ol.list--block
        // Name, Constituency, Party, Image
        +list--block('Nigel Adams', 'Selby & Ainsty', 'Labour')
        +list--block('Nigel Adams', 'Selby & Ainsty', 'Labour', 'https://api-parliament-uk.azure-api.net/Staging/photo/0qLRSwb3.jpeg?crop=CU_1:1&width=186&quality=80', 'Margot James')
        -var lords_list = true
        +list--block('Lord Aberdare', 'House of Lords', 'Crossbench', 'https://s3-eu-west-1.amazonaws.com/web1live.pugin-website/images/placeholder_members_image.png')

      h3 Parties
      ol.list--block
        // Party, Count
        +list--block__parties('Labour', '259')

      h3 Accessible
      ol.list--block
        // Constituency, Date
        +list--block__accessible('', '2017 to present')
        +list--block__accessible('Selby & Ainsty', '6 May 2010 to 30 Mar 2015')

      h3 Generic
      ol.list--block
        -var list_box_h3 = true
        // Heading, Content
        +list--block__generic('Parties and groups', 'Find MPs and Lords by their party or group.')
          // Extendable
            p Further content can be added
          ul
            li Item 1
            li Item 2
            li Item 3
              ul
                li Item 1
                li Item 2
                li Item 3

  section
    .container
      h2 Pipe list
      h3 Default
      ol.list--pipe
        // Constituency, Date, Name
        +list--pipe('Selby & Ainsty', '8 Jun 2017 to present')
        +list--pipe('Windsor', '8 Jun 2017 to present', 'Adam Afriyie')
        -var member = true
        +list--pipe('Windsor', '8 Jun 2017 to present')
        li
          .card
            .card__details
              small House of Commons Role
              h4 MP for Hackney North and Stoke Newington
              p Jun 1986 to present

      h3 Media
      ol.list--pipe
        // Image URL, Image Alt, Heading, Button URL, Button Text
        +list--pipe__media('https://api-parliament-uk.azure-api.net/Staging/photo/0qLRSwb3.jpeg?crop=MCU_3:2&width=260&quality=80', 'Margot James', '3:2 portrait', 'https://api-parliament-uk.azure-api.net/Staging/photo/0qLRSwb3.jpeg?crop=MCU_3:2&quality=80&download=true', 'Download jpeg (3000 x 2000)')
        +list--pipe__media('https://api-parliament-uk.azure-api.net/Staging/photo/0qLRSwb3.jpeg?crop=MCU_3:4&width=260&quality=80', 'Margot James', '3:4 portrait', 'https://api-parliament-uk.azure-api.net/Staging/photo/0qLRSwb3.jpeg?crop=MCU_3:4&quality=80&download=true', 'Download jpeg (1500 x 2000)')
        +list--pipe__media('https://api-parliament-uk.azure-api.net/Staging/photo/0qLRSwb3.jpeg?crop=CU_1:1&width=260&quality=80', 'Margot James', '1:1 portrait', 'https://api-parliament-uk.azure-api.net/Staging/photo/0qLRSwb3.jpeg?crop=CU_1:1&quality=80&download=true', 'Download jpeg (1500 x 1500)')

      h3 Documents
      ol.list--pipe__deep
        li
          .card--large
            figure.svg--icon.svg--file__word
              include ../../icons/file.svg
            .card__details
              h3 Document template
              +buttonLink('#', 'Download document template', 'btn--primary', 'download')
                include ../../icons/download.svg
              p If you need a different format, email #[+link('#', 'example@parliament.uk')].

  section
    .container
      h2 Events list

      h3 Pipe style
      ol.list--events
        li
          h4
            time(datetime='2018-01-01') 01 Jan 2018
          ol.list--pipe
            li
              .card
                .card__details
                  small Home Office
                  h5 #[+link('#', 'Immigrants: Commonwealth')]
            li
              .card
                .card__details
                  small Department for Business, Energy and Industrial Strategy
                  h5 #[+link('#', 'Housing: Heating')]
        li
          h4
            time(datetime='2018-01-02') 02 Jan 2018
          ol.list--pipe
            li
              .card
                .card__details
                  small Home Office
                  h5 #[+link('#', 'Asylum: Finance')]
            li
              .card
                .card__details
                  small Home Office
                  h5 #[+link('#', 'Immigration: Caribbean')]

      h3 Block style
      ol.list--events
        li
          h4
            time(datetime='2018-01-01') 01 Jan 2018
          ol.list--block
            li
              .card
                .card__details
                  small Home Office
                  h5 #[+link('#', 'Immigrants: Commonwealth')]
            li
              .card
                .card__details
                  small Department for Business, Energy and Industrial Strategy
                  h5 #[+link('#', 'Housing: Heating')]
        li
          h4
            time(datetime='2018-01-02') 02 Jan 2018
          ol.list--block
            li
              .card
                .card__details
                  small Home Office
                  h5 #[+link('#', 'Asylum: Finance')]
            li
              .card
                .card__details
                  small Home Office
                  h5 #[+link('#', 'Immigration: Caribbean')]

  section
    .container
      h2 Basic Lists
      h3 Bulleted lists
      ul
        li Item 1
        li Item 2
        li Item 3
      h3 Numbered lists
      ol
        li Item 1
        li Item 2
        li Item 3
      h3 Roman numeral lists
      ol.list--roman
        li Item 1
        li Item 2
        li Item 3
      h3 Alphabetical lists
      ol.list--alpha
        li Item 1
        li Item 2
        li Item 3
      h3 Unmarked lists
      ul.list
        li Item 1
          ul
            li Item 1
        li Item 2
          ol
            li Item 1
        li Item 3
      h3 Inline lists
      ul.list--inline
        li Item 1
        li Item 2
        li Item 3
      h3 Nested lists
      ul
        li Item 1
          ul
            li Item 1
              ul
                li Item 1
                  ol.list--roman
                    li Item 1
                      ul
                        li Item 1
                          ul
                            li Item 1
                              ul
                                li Item 1
