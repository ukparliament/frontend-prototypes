//- Sliders
mixin slider(title)
  h2.slider-link= title
  .slider-content
      block

//- Links
mixin link(href, name)
  //- Attributes can include rel, role, target, title and tabindex
  a(href=href)&attributes(attributes)= name
    if block
      block

//- Images
mixin image(src, alt)
  //- Attributes can be width, height, srcset, longdesc
  img(src=src alt=alt)&attributes(attributes)

//- Inputs
mixin input(label, id, type, maxlength, regex, title)
  label(for=id)= label
  input(id=id, name=id, type=type maxlength=maxlength pattern=regex title=title)