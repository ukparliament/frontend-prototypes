//- List Box
mixin list--block(name, constituency, party, image)
  li
    .card
      if image
        figure.avatar--round
          +link('#', '')(aria-hidden="true", tabIndex="-1")
            picture
              +image(image, name)
        .card__details
          h2 #[+link('#', name)]
          if lords_list
            p= 'Member of the ' + constituency
          else
            p= 'MP for ' + constituency
          p= party

      else
        .card__details
          h2 #[+link('#', constituency)]
          p= name

//- List Box Parties
mixin list--block__parties(party, count)
  li
    .card
      .card__details
        h2 #[+link('#', party)]
        p= 'All current ' + party + ' MPs'
      .card__details
        span.count= count
        | MPs

//- List Box Accessible
mixin list--block__accessible(constituency, date)
  li
    .card
      .card__details
        if constituency
          h2 #[+link('#', constituency)]
            span.sr-only= 'constituency from ' + date
          p
            span(aria-hidden='true')= date
        else
          h2 #[+link('#', date)]

//- List Box Generic
mixin list--block__generic(heading, content)
  li
    .card
      .card__details
        if list_box_h4
          h4 #[+link('#', heading)]
        else if list_box_h3
          h3 #[+link('#', heading)]
        else
          h2 #[+link('#', heading)]
        p= content
        block

//- List Block Inline
mixin list--block__inline(name, count, inline_text)
  if inline_text
    li
      .card--inline
        .card__details
          h2 #[+link('#', name)]
          p= '- ' + count + ' MPs'
  else
    li
      .card
        .card__details
          h2 #[+link('#', name)]
          p= count + ' MPs'

//- List Pipe
mixin list--pipe(constituency, date, name)
  li
    .card
      .card__details
        if member
          p= 'MP for '
            +link('#', constituency)
          p= date
        else if name
          h2 #[+link('#', name)]
          p= date
        else
          p= date

//- List Pipe Media
mixin list--pipe__media(imgURL, imgAlt, heading, btnURL, btnText)
  li
    .card--large
      figure
        picture
          +image(imgURL, imgAlt)
      .card__details
        h3= heading
        +button--link(btnURL, btnText, 'btn--primary')
